import string
import random
passlength= int(input("enter the password length:"))
options=("t choose the options *** in 1.digitsin 2.special charactersin 3.lettersin 4 .exit")
print(options)
charpass=""
while True: 
choice=int(input("enter the options:"))
if(choice==1):
charpass+=string.digits
elif(choice==2):
charpass+=string.punctuation
elif(choice==3):
charpass+=string.ascii_ letters
break
else: 
print("invalid options")
password=[]
for i in range(passlength):
randomchar=random.choice(charpass) 
password. append(randomchar)
print("the random password is:"+"".join(password)) 
